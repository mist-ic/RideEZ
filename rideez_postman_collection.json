{
    "info": {
        "_postman_id": "rideez-backend-collection",
        "name": "RideEZ Backend",
        "description": "Postman collection for RideEZ Ride Sharing API",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Auth",
            "item": [
                {
                    "name": "Register User",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json",
                                "type": "text"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"username\": \"passenger1\",\n    \"password\": \"password123\",\n    \"role\": \"ROLE_USER\"\n}"
                        },
                        "url": {
                            "raw": "http://localhost:8081/api/auth/register",
                            "protocol": "http",
                            "host": [
                                "localhost"
                            ],
                            "port": "8081",
                            "path": [
                                "api",
                                "auth",
                                "register"
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Register Driver",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json",
                                "type": "text"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"username\": \"driver1\",\n    \"password\": \"password123\",\n    \"role\": \"ROLE_DRIVER\"\n}"
                        },
                        "url": {
                            "raw": "http://localhost:8081/api/auth/register",
                            "protocol": "http",
                            "host": [
                                "localhost"
                            ],
                            "port": "8081",
                            "path": [
                                "api",
                                "auth",
                                "register"
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Login User",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "var jsonData = pm.response.json();",
                                    "pm.environment.set(\"user_token\", jsonData.token);"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json",
                                "type": "text"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"username\": \"passenger1\",\n    \"password\": \"password123\"\n}"
                        },
                        "url": {
                            "raw": "http://localhost:8081/api/auth/login",
                            "protocol": "http",
                            "host": [
                                "localhost"
                            ],
                            "port": "8081",
                            "path": [
                                "api",
                                "auth",
                                "login"
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Login Driver",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "var jsonData = pm.response.json();",
                                    "pm.environment.set(\"driver_token\", jsonData.token);"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json",
                                "type": "text"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"username\": \"driver1\",\n    \"password\": \"password123\"\n}"
                        },
                        "url": {
                            "raw": "http://localhost:8081/api/auth/login",
                            "protocol": "http",
                            "host": [
                                "localhost"
                            ],
                            "port": "8081",
                            "path": [
                                "api",
                                "auth",
                                "login"
                            ]
                        }
                    },
                    "response": []
                }
            ]
        },
        {
            "name": "Ride",
            "item": [
                {
                    "name": "Create Ride",
                    "request": {
                        "auth": {
                            "type": "bearer",
                            "bearer": [
                                {
                                    "key": "token",
                                    "value": "{{user_token}}",
                                    "type": "string"
                                }
                            ]
                        },
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json",
                                "type": "text"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"pickupLocation\": \"Mall of Asia\",\n    \"dropLocation\": \"Airport\"\n}"
                        },
                        "url": {
                            "raw": "http://localhost:8081/api/v1/rides",
                            "protocol": "http",
                            "host": [
                                "localhost"
                            ],
                            "port": "8081",
                            "path": [
                                "api",
                                "v1",
                                "rides"
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Get User Rides",
                    "request": {
                        "auth": {
                            "type": "bearer",
                            "bearer": [
                                {
                                    "key": "token",
                                    "value": "{{user_token}}",
                                    "type": "string"
                                }
                            ]
                        },
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "http://localhost:8081/api/v1/user/rides",
                            "protocol": "http",
                            "host": [
                                "localhost"
                            ],
                            "port": "8081",
                            "path": [
                                "api",
                                "v1",
                                "user",
                                "rides"
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Get Driver Pending Requests",
                    "request": {
                        "auth": {
                            "type": "bearer",
                            "bearer": [
                                {
                                    "key": "token",
                                    "value": "{{driver_token}}",
                                    "type": "string"
                                }
                            ]
                        },
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "http://localhost:8081/api/v1/driver/rides/requests",
                            "protocol": "http",
                            "host": [
                                "localhost"
                            ],
                            "port": "8081",
                            "path": [
                                "api",
                                "v1",
                                "driver",
                                "rides",
                                "requests"
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Accept Ride",
                    "request": {
                        "auth": {
                            "type": "bearer",
                            "bearer": [
                                {
                                    "key": "token",
                                    "value": "{{driver_token}}",
                                    "type": "string"
                                }
                            ]
                        },
                        "method": "POST",
                        "header": [],
                        "url": {
                            "raw": "http://localhost:8081/api/v1/driver/rides/<ride_id_here>/accept",
                            "protocol": "http",
                            "host": [
                                "localhost"
                            ],
                            "port": "8081",
                            "path": [
                                "api",
                                "v1",
                                "driver",
                                "rides",
                                "<ride_id_here>",
                                "accept"
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Complete Ride",
                    "request": {
                        "auth": {
                            "type": "bearer",
                            "bearer": [
                                {
                                    "key": "token",
                                    "value": "{{driver_token}}",
                                    "type": "string"
                                }
                            ]
                        },
                        "method": "POST",
                        "header": [],
                        "url": {
                            "raw": "http://localhost:8081/api/v1/rides/<ride_id_here>/complete",
                            "protocol": "http",
                            "host": [
                                "localhost"
                            ],
                            "port": "8081",
                            "path": [
                                "api",
                                "v1",
                                "rides",
                                "<ride_id_here>",
                                "complete"
                            ]
                        }
                    },
                    "response": []
                }
            ]
        }
    ]
}